<% provide(:title, 'All Users') %>
<h2> All Users </h2>

<% if false %>
 comment: The pagination link appears because of will_paginate...
<% end %>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user %>
      <%= link_to user.name, user %>
      <% if current_user.admin? %>
      <b>| </b><%= link_to "Delete Account", user, method: :delete, confirm: "Are you sure?" %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
